{
  "name": "colisee-builder",
  "version": "0.0.1",
  "description": "Service to build AI clients into Docker images.",
  "main": "src/app.js",
  "scripts": {
    "quick-start": "node src/app.js",
    "prestart": "npm run build",
    "start": "npm run quick-start",
    "start-prod": "NODE_ENV=production node src/app.js",
    
    "build": "npm run build:src",
    "build:src": "tsc --project tsconfig-src.json",
    "setup": "npm install",
    "predocs": "npm run build",
    "docs": "npm run quick-docs",
    "quick-docs": "npm run quick-docs:ts && npm run quick-docs:api && npm run quick-docs:readme",
    "quick-docs:api": "apidoc --input src/ --output docs/api/",
    "quick-docs:ts": "typedoc --out docs/ts/",
    "quick-docs:readme": "cp README.md docs/",
    
    "quick-test": "mocha --colors test/",
    "pretest": "npm run build",
    "test": "npm run quick-test",
    
    "clean": "npm run clean:src && npm run clean:test && npm run clean:npm",
    "clean:src": "find src -name *.js -name *.js.map -exec rm {} +",
    "clean:test": "find test -name *.js -name *.js.map -exec rm {} +",
    "clean:npm": "rm -rf node_modules/ npm-debug.log",
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siggame/colisee-builder.git"
  },
  "author": "siggame",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/siggame/colisee-builder/issues"
  },
  "homepage": "https://siggame.io/colisee-builder",
  "devDependencies": {
    "@types/body-parser": "0.0.34",
    "@types/chai": "^3.4.34",
    "@types/cors": "^2.8.0",
    "@types/dotenv": "^2.0.20",
    "@types/express": "^4.0.35",
    "@types/lodash": "^4.14.52",
    "@types/mocha": "^2.2.39",
    "@types/node": "^7.0.5",
    "apidoc": "^0.17.5",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "typedoc": "^0.5.7"
  },
  "dependencies": {
    "apidoc": "^0.17.5",
    "body-parser": "^1.16.1",
    "cors": "^2.8.1",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "lodash": "^4.17.4",
    "typescript": "^2.1.5"
  }
}
